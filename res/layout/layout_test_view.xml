<com.example.test.views.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:longClickable="true"
    tools:context=".DrawTest" >

    <com.example.test.views.CircleView
        android:id="@+id/mycicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="30dp"
        android:padding="40dp"
        android:background="#000000" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=""
        android:visibility="gone" />

    <com.example.test.views.MyScrollerView
        android:id="@+id/textView2"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_below="@id/textView1"
        android:layout_centerInParent="true"
        android:background="@drawable/img_test"
        android:clickable="true"
        android:text="dddddd\ndddddd\ndddddd\ndddddd\ndddddd\ndddddd\ndddddd\ndddddd\ndddddd\ndddddd\ndddddd\ndddddd\ndddddd\ndddddd\ndddddd\ndddddd\ndddddd\ndddddd\n"
        android:visibility="gone" />

</com.example.test.views.MyLinearLayout>